<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProductActivity">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/poster_hero_height"
            android:layout_marginBottom="@dimen/activity_margin_content"
            android:layout_marginEnd="@dimen/activity_margin_half"
            android:layout_marginLeft="@dimen/activity_margin_half"
            android:layout_marginRight="@dimen/activity_margin_half"
            android:layout_marginStart="@dimen/activity_margin_half"
            app:cardBackgroundColor="@color/placeholder_grey"
            app:cardCornerRadius="3dp"
            app:cardPreventCornerOverlap="false">

        <ProgressBar
                android:id="@+id/imgProgress"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="@dimen/activity_margin_content"
                android:layout_height="@dimen/activity_margin_content"
                android:layout_gravity="center"
                android:theme="@style/CircularProgress"/>

        <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </android.support.v7.widget.CardView>

    <LinearLayout
            android:layout_marginTop="@dimen/poster_hero_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                    android:layout_marginTop="@dimen/paddingItemDecorationDefault"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_marginTop="@dimen/paddingItemDecorationDefault"
                        android:layout_marginLeft="@dimen/paddingItemDecorationDefault"
                        android:text="aifon x pa (equis) - joya nunca tacsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvTitleDetail"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_marginTop="@dimen/paddingItemDecorationDefault"
                        android:layout_marginLeft="@dimen/paddingItemDecorationDefault"
                        android:text="$50000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvPriceDetail"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_marginTop="@dimen/paddingItemDecorationDefault"
                        android:layout_marginLeft="@dimen/paddingItemDecorationDefault"
                        android:text="@string/ProductDetailDescriptionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"/>

                <ProgressBar
                        android:layout_marginTop="@dimen/paddingItemDecorationDefault"
                        android:layout_width="20dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center"
                        android:id="@+id/descriptionProgresBar"/>
                <TextView
                        android:layout_marginTop="@dimen/paddingItemDecorationDefault"
                        android:layout_marginLeft="@dimen/paddingItemDecorationDefault"
                        android:text="Es el aifon x directo desde recoleta viene con funda (de onda) como se muestra en la foto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDescription"
                        android:textStyle="bold"
                        android:visibility="gone"/>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>